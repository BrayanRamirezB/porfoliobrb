---
import Github from "./icons/Github.astro";
import LinkedIn from "./icons/LinkedIn.astro";
import SocialPill from "./SocialPill.astro";

const currentYear = new Date().getFullYear();
---

<footer class="opacity-80 min-[375px]:pl-4 md:p1-0 mt-16 w-full mx-auto container lg:max-w-4xl md:max-w-3xl sm:max-w-xl mb-10 flex justify-center shadow m-4 bg-white/70 dark:bg-black/30">
    <div class="w-full max-w-screen-xl mx-auto p-4 md:py-8">
        <div class="flex items-center justify-end text-sm text-gray-500 sm:text-center dark:text-gray-400">
            <span class="block px-6">brbrayan1945@gmail.com</span>
            <SocialPill href="https://github.com/BrayanRamirezB" class="px-3 py-2" >
                <Github class="size-6 fill-black dark:fill-white opacity-50 transition hover:fill-[#0052D4] dark:hover:fill-[#4364F7]" />
            </SocialPill>
            <SocialPill href="https://www.linkedin.com/in/brayan-rb-4b006b341/" class="px-3 py-2" >       
                <LinkedIn class="size-6 fill-black dark:fill-white opacity-50 transition hover:fill-[#0052D4] dark:hover:fill-[#4364F7]" />
            </SocialPill>
        </div>
        <hr class="my-6 border-gray-200 sm:mx-auto dark:border-gray-700 lg:my-8" />
        <div class="sm:flex sm:items-center sm:justify-between">
            <ul class="flex flex-wrap justify-center mb-6 text-sm font-medium text-gray-500 sm:mb-0 dark:text-gray-400">
                <li>
                    <a href="#sobre-mi" class="hover:underline me-4 md:me-6">Sobre mí</a>
                </li>
                <li>
                    <a href="mailto:brbrayan1945@gmail.com" class="hover:underline me-4 md:me-6">Contacto</a>
                </li>
            </ul>
            <span class="block text-sm text-gray-500 sm:text-center dark:text-gray-400">
                ©{currentYear} 
                <a href="https://linkedin.com/in/brayan-rb-4b006b341/" class="hover:underline">
                    BrayanRB
                </a>. Elaborado por Brayan Ramirez, utilizando como inspiración este <a href="https://github.com/midudev/porfolio.dev" class="hover:underline">repositorio</a>.</span>
        </div>
    </div>
</footer>

