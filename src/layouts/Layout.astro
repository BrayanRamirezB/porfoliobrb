---
import '@fontsource-variable/onest'
import Footer from '../components/Footer.astro'
import Header from '../components/Header.astro'
---

<!doctype html>
<html lang='es'>
  <head>
    <meta charset='UTF-8' />
    <meta name='viewport' content='width=device-width' />
    <meta
      name='description'
      content='Portafolio de BrayanRB. Especialista en Desarrollo Web y Programaci贸n.'
    />
    <link rel='icon' type='image' href='/avatar.webp' />
    <meta name='generator' content={Astro.generator} />
    <title>BrayanRB - Desarrollador y Programador Web</title>

    <!-- Open Graph Meta Tags -->
    <meta
      property='og:title'
      content='BrayanRB - Desarrollador y Programador Web'
    />
    <meta
      property='og:description'
      content='Portafolio de BrayanRB. Especialista en Desarrollo Web y Programaci贸n.'
    />
    <meta property='og:image' content='/brayanphoto.webp' />
    <meta property='og:url' content='https://porfoliobrayanrb.netlify.app/' />
    <meta property='og:type' content='website' />

    <!-- Twitter Card Meta Tags -->
    <meta name='twitter:card' content='summary_large_image' />
    <meta
      name='twitter:title'
      content='BrayanRB - Desarrollador y Programador Web'
    />
    <meta
      name='twitter:description'
      content='Portafolio de BrayanRB. Especialista en Desarrollo Web y Programaci贸n.'
    />
    <meta name='twitter:image' content='/brayanphoto.webp' />

    <!-- JSON-LD Structured Data -->
    <script type='application/ld+json'>
      {
        "@context": "https://schema.org",
        "@type": "Person",
        "name": "BrayanRB",
        "url": "https://porfoliobrayanrb.netlify.app/",
        "image": "/brayanphoto.webp",
        "jobTitle": "Desarrollador y Programador Web",
        "description": "Especialista en Desarrollo Web y Programaci贸n."
      }
    </script>

    <script>
      document.addEventListener('DOMContentLoaded', () => {
        const lamp = document.getElementById('lamp')

        if (lamp instanceof HTMLElement) {
          document.addEventListener('mousemove', (e) => {
            lamp.style.left = e.clientX - lamp.offsetWidth / 2 + 'px'
            lamp.style.top = e.clientY - lamp.offsetHeight / 2 + 'px'
          })
        }
      })
    </script>
  </head>
  <body class='relative text-black dark:text-white'>
    <div
      class='absolute top-0 bottom-0 z-[-2] min-h-screen w-full bg-gray-50 dark:bg-gray-950
      bg-[radial-gradient(ellipse_80%_80%_at_50%_-20%,rgba(217,216,255,0.5),rgba(250,250,255,0.9))]
      dark:bg-[radial-gradient(ellipse_80%_80%_at_50%_-20%,rgba(2,27,121,0.7),rgba(15,12,41,0.2))]'
    >
    </div>
    <Header />
    <slot />
    <Footer />
    <div
      id='lamp'
      class='pointer-events-none fixed size-30 rounded-full bg-radial from-[#f83600]/20 via-[#f83600]/5 dark:from-[#4364F7]/20 dark:via-[#4364F7]/5 to-transparent border-0 blur-md'
    >
    </div>
  </body>
</html>

<style is:global>
  @import 'tailwindcss';
  @config '../../tailwind.config.mjs';
  :root {
    color-scheme: light dark;
  }

  html {
    background: rgba(0, 0, 0, 0.3);
    font-family: 'Onest Variable', system-ui, sans-serif;
    scroll-behavior: smooth;
  }

  body {
    display: flex;
    flex-direction: column;
    min-height: 100vh;
    overscroll-behavior: none;
  }
</style>
